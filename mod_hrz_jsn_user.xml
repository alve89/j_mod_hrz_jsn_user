<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.6" client="site" method="upgrade">
    <name>mod_hrz_jsn_user</name>
    <author>Stefan Herzog</author>
    <creationDate>August 2020</creationDate>
    <version>0.0.17</version>
    <description>Modul zum Anzeigen eines Users</description>
    <scriptfile>script.php</scriptfile>
    <files>
        <filename>mod_hrz_jsn_user.xml</filename>
        <filename module="mod_hrz_jsn_user">mod_hrz_jsn_user.php</filename>
        <filename>index.html</filename>
        <filename>helper.php</filename>
        <filename>tmpl/default.php</filename>
        <filename>tmpl/index.html</filename>
		    <folder>css</folder>
    </files>
    <languages>
    		<language tag="de-DE">languages/de-DE/de-DE.mod_hrz_jsn_user.ini</language>
    		<language tag="en-GB">languages/en-GB/en-GB.mod_hrz_jsn_user.sys.ini</language>
  	</languages>
    <config>
	    <fields name="params">
	    	<fieldset name="basic">
    			<field name="userid"
                  type="user"
    				      label="MOD_HRZ_JSN_USER_LABEL_CHOSEN_USER"
                  description="MOD_HRZ_JSN_USER_DESC_CHOSEN_USER"
    			/>
    			<field name="defaultContactAddress"
                  type="text"
                  default="/direktkontakt"
                  required="true"
                  label="MOD_HRZ_JSN_USER_LABEL_DEFAULTCONTACTADDRESS"
                  description="MOD_HRZ_JSN_USER_DESC_DEFAULTCONTACTADDRESS"
    			/>
          <field name="parameterName"
                  type="text"
                  size="15"
                  default="cfid"
                  required="true"
                  label="MOD_HRZ_JSN_USER_LABEL_PARAMETERNAME"
                  description="MOD_HRZ_JSN_USER_DESC_PARAMETERNAME"
    			/>
          <field name="useSpecialInfomation"
    			       type="radio" default="0"
    			       label="MOD_HRZ_JSN_USER_LABEL_USESPECIALINFORMATION"
    			       description="MOD_HRZ_JSN_USER_DESC_USESPECIALINFORMATION"
    			       class="btn-group btn-group-yesno" >
    				<option value="1">JYES</option>
    				<option value="0">JNO</option>
    			</field>
          <field name="department"
                  type="text"
                  default=""
                  label="MOD_HRZ_JSN_USER_LABEL_DEPARTMENT"
                  description="MOD_HRZ_JSN_USER_DESC_DEPARTMENT"
                  showon="useSpecialInfomation:1"
          />
          <field name="role"
                  type="text"
                  default=""
                  label="MOD_HRZ_JSN_USER_LABEL_ROLE"
                  description="MOD_HRZ_JSN_USER_DESC_ROLE"
                  showon="useSpecialInfomation:1"
          />
    			<field name="show_mail"
    			       type="radio" default="0"
    			       label="MOD_HRZ_JSN_USER_LABEL_SHOW_MAIL"
    			       description="MOD_HRZ_JSN_USER_DESC_SHOW_MAIL"
    			       class="btn-group btn-group-yesno" >
    				<option value="1">JYES</option>
    				<option value="0">JNO</option>
    			</field>
    			<field name="show_phone"
    			       type="radio" default="0"
    			       label="MOD_HRZ_JSN_USER_LABEL_SHOW_PHONE"
    			       description="MOD_HRZ_JSN_USER_DESC_SHOW_PHONE"
    			       class="btn-group btn-group-yesno" >
    				<option value="1">JYES</option>
    				<option value="0">JNO</option>
    			</field>
	    	</fieldset>
	    </fields>
    </config>
    <updateservers>
  	<server type="extension" priority="1" name="mod_hrz_jsn_user">https://raw.githubusercontent.com/alve89/j_mod_hrz_jsn_user/master/updates.xml</server>
  	</updateservers>
</extension>
